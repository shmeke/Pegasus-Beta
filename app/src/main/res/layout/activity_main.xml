<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="219dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="49dp"
                android:gravity="center|start"
                android:spinnerMode="dialog"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnknownId" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="287dp"
                android:layout_height="27dp"
                android:layout_marginStart="52dp"
                android:layout_marginLeft="52dp"
                android:layout_marginEnd="52dp"
                android:layout_marginRight="52dp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUsername">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="126dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Välj häst"
                        android:textAllCaps="false"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerHorse"
                        android:layout_width="162dp"
                        android:layout_height="match_parent"
                        android:autofillHints="Välj häst" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </TableLayout>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="412dp"
                android:layout_height="600dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/stroke_bg"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout"
                app:layout_constraintVertical_bias="1.0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/Widget.MaterialComponents.MaterialCalendar.HeaderSelection"
                        android:layout_width="187dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="260px"
                        android:layout_marginTop="250px"
                        android:gravity="center"
                        android:text="Ridpass"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                        android:textColor="@color/colorAccent"
                        android:textSize="8sp"
                        android:textStyle="normal|bold"
                        app:fontFamily="sans-serif-medium" />

                    <Button
                        android:id="@+id/buttonStart"
                        style="@android:style/Widget.Holo.Button"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="220px"
                        android:layout_marginTop="50px"
                        android:background="@android:color/holo_green_dark"
                        android:text="Starta pass" />

                    <Button
                        android:id="@+id/buttonStop"
                        style="@android:style/Widget.Holo.Button"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="520px"
                        android:layout_marginTop="50px"
                        android:background="@android:color/holo_red_light"
                        android:text="Avsluta pass" />

                    <TableLayout
                        android:id="@+id/tableLayout3"
                        android:layout_width="325dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40sp"
                        android:layout_marginTop="150sp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="243dp"
                                android:layout_height="35dp"
                                android:gravity="center|start"
                                android:text="Välj datum" />

                            <ImageButton
                                android:id="@+id/buttonDropdown"
                                android:layout_width="82dp"
                                android:layout_height="match_parent"
                                android:background="@color/ic_banner_background"
                                android:src="@drawable/ic_button_calendar"
                                android:tint="@color/design_default_color_on_secondary"
                                tools:src="@android:drawable/ic_menu_month" />

                        </TableRow>

                    </TableLayout>

                    <TableLayout
                        android:id="@+id/tableLayout2"
                        android:layout_width="327dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="40sp"
                        android:layout_marginTop="220sp">

                        <TableRow
                            android:layout_width="359dp"
                            android:layout_height="58dp">

                            <TextView
                                android:id="@+id/txtWorkout"
                                android:layout_width="218dp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:textSize="18sp" />

                            <Spinner
                                android:id="@+id/spinnerWorkout"
                                android:layout_width="108dp"
                                android:layout_height="match_parent" />
                        </TableRow>

                    </TableLayout>

                    <ExpandableListView
                        android:id="@+id/listdist"
                        android:layout_width="315dp"
                        android:layout_height="274dp"
                        android:layout_marginLeft="45sp"
                        android:layout_marginTop="245sp">

                    </ExpandableListView>
                </RelativeLayout>
            </ScrollView>

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="102dp"
                android:layout_height="33dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:inputType="date"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.783"
                app:layout_constraintStart_toEndOf="@+id/txtUsername"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>